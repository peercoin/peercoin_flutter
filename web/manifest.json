{
    "manifest_version": 3,
    "name": "Peercoin Web Wallet",
    "short_name": "peercoin web wallet",
    "version": "1.3.0",
    "description": "A new Peercoin Web Wallet.",
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'none'; base-uri 'self';"
    },
    "icons": {
        "192": "icons/Icon-192.png",
        "512": "icons/Icon-512.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "192": "icons/Icon-192.png",
            "512": "icons/Icon-512.png"
        }
    },
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "*://*.peercoin.net/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "*.html",
                "*.js",
                "*.png",
                "*.svg",
                "*.wasm"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "optional_permissions": [
        "clipboardWrite",
        "clipboardRead"
    ]
}